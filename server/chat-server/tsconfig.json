{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "types": ["reflect-metadata"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@app/*": ["./app/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
  }